@model CapaEntidad.Evento

@{
    ViewBag.Title = "Crear Evento";
}

<h2>Crear Evento</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Id_Evento)
        @Html.TextBoxFor(model => model.Id_Evento, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Id_Evento)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre_Evento)
        @Html.TextBoxFor(model => model.Nombre_Evento, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nombre_Evento)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion_Evento)
        @Html.TextAreaFor(model => model.Descripcion_Evento, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Descripcion_Evento)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Fecha_Evento)
        @Html.TextBoxFor(model => model.Fecha_Evento, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
        @Html.ValidationMessageFor(model => model.Fecha_Evento)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Lugar_Evento)
        @Html.TextBoxFor(model => model.Lugar_Evento, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Lugar_Evento)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Activo_Evento)
        @Html.CheckBoxFor(model => model.Activo_Evento)
        @Html.ValidationMessageFor(model => model.Activo_Evento)
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
}
