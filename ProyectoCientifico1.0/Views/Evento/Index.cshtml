@model IEnumerable<CapaEntidad.Evento>

@{
    ViewBag.Title = "Lista de Eventos";
}

<h2>Eventos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Evento", "Create")
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Fecha</th>
            <th>Lugar</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id_Evento)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre_Evento)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion_Evento)</td>
                <td>@Html.DisplayFor(modelItem => item.Fecha_Evento)</td>
                <td>@Html.DisplayFor(modelItem => item.Lugar_Evento)</td>
                <td>@Html.DisplayFor(modelItem => item.Activo_Evento)</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id_Evento }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id_Evento }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Evento })
                </td>
            </tr>
        }
    </tbody>
</table>
